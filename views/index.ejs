<%- include ('partials/header.ejs') %> 
<%- include ('partials/navbar.ejs') %>

<body>
  <div class="container">
    <table class="table table-dark table-striped table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Local</th>
          <th>Data</th>
          <th>Horário</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
          <% eventos.forEach(evento => { %>
            <tr>
              <td><%= evento.id %> </td>
              <td><%= evento.name %> </td>
              <td><%= evento.local %> </td>
              <td><%= moment(evento.date).format('DD/MM/YYYY') %> </td>
              <td><%= evento.time %> </td>
              <td>Deletar</td>
            </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</body>

